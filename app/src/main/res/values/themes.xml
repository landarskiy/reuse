<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReUse" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_600</item>
        <item name="colorPrimaryVariant">@color/blue_gray_600_light</item>
        <item name="colorOnPrimary">@color/white_90</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_500_light</item>
        <item name="colorOnSecondary">@color/black_85</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>